   <head>
      <link rel="stylesheet" href="./style.css" type="text/css" />
    </head>
<div class="row info">
        <div class="col-sm-8">
            
        </div>
</div>

<form action="/api/articles/{{id}}" method="post">
Name: <input type="text" name="name"><br>
Review: <textarea class="note" name="body" rows="4" cols="50"> 
</textarea><br>
<input type="submit">
</form>

{{#each Note}}

<div class="row info">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-body">
                  <p class="card-text">{{this.body}}</p>
                </div>
              </div>
        </div>

</div>

{{/each}}